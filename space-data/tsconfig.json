{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES5",
    "module": "CommonJS",
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictNullChecks": false,
    "types": ["node"],
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["ES2018","ESNext","DOM"],
    
    "typeRoots" : ["../node_modules/@types","typings"]
  },

  "include": ["./schema/*", "./src/*"]
}
