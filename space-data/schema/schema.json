{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "anyOf": [
        {
            "$ref": "#/definitions/Concept"
        },
        {
            "$ref": "#/definitions/Product"
        },
        {
            "$ref": "#/definitions/SceneText"
        }
    ],
    "definitions": {
        "Concept": {
            "additionalProperties": false,
            "properties": {
                "$schema": {
                    "description": "for json schema",
                    "type": "string"
                },
                "github": {
                    "pattern": "^https://github\\.com/.*",
                    "type": "string"
                },
                "position": {
                    "properties": {
                        "x": {
                            "type": "number"
                        },
                        "y": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "x",
                        "y"
                    ],
                    "type": "object"
                },
                "relations": {
                    "items": {
                        "$ref": "#/definitions/relation"
                    },
                    "type": "array"
                },
                "stackoverflow_tag": {
                    "type": "string"
                },
                "tags": {
                    "items": {
                        "enum": [
                            "FREE",
                            "LEADER",
                            "OPEN_SOURCE",
                            "TRENDING"
                        ],
                        "type": "string"
                    },
                    "type": "array"
                },
                "title": {
                    "description": "displayed in viewport and popup",
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "concept"
                    ],
                    "type": "string"
                },
                "wiki": {
                    "pattern": "^https://en\\.wikipedia\\.org/.*",
                    "type": "string"
                }
            },
            "required": [
                "position",
                "type"
            ],
            "type": "object"
        },
        "Product": {
            "additionalProperties": false,
            "properties": {
                "$schema": {
                    "description": "for json schema",
                    "type": "string"
                },
                "github": {
                    "pattern": "^https://github\\.com/.*",
                    "type": "string"
                },
                "position": {
                    "properties": {
                        "x": {
                            "type": "number"
                        },
                        "y": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "x",
                        "y"
                    ],
                    "type": "object"
                },
                "relations": {
                    "items": {
                        "$ref": "#/definitions/relation"
                    },
                    "type": "array"
                },
                "stackoverflow_tag": {
                    "type": "string"
                },
                "tags": {
                    "items": {
                        "enum": [
                            "FREE",
                            "LEADER",
                            "OPEN_SOURCE",
                            "TRENDING"
                        ],
                        "type": "string"
                    },
                    "type": "array"
                },
                "title": {
                    "description": "displayed in viewport and popup",
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "product"
                    ],
                    "type": "string"
                },
                "wiki": {
                    "pattern": "^https://en\\.wikipedia\\.org/.*",
                    "type": "string"
                }
            },
            "required": [
                "position",
                "type"
            ],
            "type": "object"
        },
        "SceneText": {
            "additionalProperties": false,
            "properties": {
                "$schema": {
                    "description": "for json schema",
                    "type": "string"
                },
                "arc": {
                    "description": "1 for max. curvature, 0 means text follow a straight line",
                    "maximum": 1,
                    "minimum": 0,
                    "type": "number"
                },
                "github": {
                    "pattern": "^https://github\\.com/.*",
                    "type": "string"
                },
                "position": {
                    "properties": {
                        "x": {
                            "type": "number"
                        },
                        "y": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "x",
                        "y"
                    ],
                    "type": "object"
                },
                "relations": {
                    "items": {
                        "$ref": "#/definitions/relation"
                    },
                    "type": "array"
                },
                "rotation": {
                    "description": "clockwise rotation in degrees (-180,180)",
                    "maximum": 180,
                    "minimum": -180,
                    "type": "number"
                },
                "size": {
                    "type": "number"
                },
                "stackoverflow_tag": {
                    "type": "string"
                },
                "tags": {
                    "items": {
                        "enum": [
                            "FREE",
                            "LEADER",
                            "OPEN_SOURCE",
                            "TRENDING"
                        ],
                        "type": "string"
                    },
                    "type": "array"
                },
                "text": {
                    "type": "string"
                },
                "title": {
                    "description": "displayed in viewport and popup",
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "scenetext"
                    ],
                    "type": "string"
                },
                "wiki": {
                    "pattern": "^https://en\\.wikipedia\\.org/.*",
                    "type": "string"
                }
            },
            "required": [
                "arc",
                "position",
                "rotation",
                "size",
                "text",
                "type"
            ],
            "type": "object"
        },
        "relation": {
            "properties": {
                "ref": {
                    "description": "Unique and short identifier used to reference this object.",
                    "pattern": "^[a-z0-9/]*$",
                    "type": "string"
                }
            },
            "required": [
                "ref"
            ],
            "type": "object"
        }
    }
}

