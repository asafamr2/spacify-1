{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "anyOf": [
        {
            "$ref": "#/definitions/Concept"
        },
        {
            "$ref": "#/definitions/Product"
        },
        {
            "$ref": "#/definitions/SceneText"
        },
        {
            "$ref": "#/definitions/Related"
        },
        {
            "$ref": "#/definitions/BiRelated"
        }
    ],
    "definitions": {
        "BiRelated": {
            "properties": {
                "$schema": {
                    "description": "for json schema",
                    "type": "string"
                },
                "category": {
                    "description": "space region",
                    "pattern": "^[a-z0-9\\-]*$",
                    "type": "string"
                },
                "child_uid": {
                    "description": "Unique and short identifier used to reference this object.",
                    "pattern": "^[a-z0-9\\-]*$",
                    "type": "string"
                },
                "parent_uid": {
                    "description": "Unique and short identifier used to reference this object.",
                    "pattern": "^[a-z0-9\\-]*$",
                    "type": "string"
                },
                "title": {
                    "description": "displayed in viewport and popup",
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "birelated"
                    ],
                    "type": "string"
                },
                "uid": {
                    "description": "Unique and short identifier used to reference this object.",
                    "pattern": "^[a-z0-9\\-]*$",
                    "type": "string"
                },
                "wiki": {
                    "description": "wikipedia page url",
                    "pattern": "^https://en\\\\.wikipedia\\\\.org/.*",
                    "type": "string"
                }
            },
            "required": [
                "category",
                "child_uid",
                "parent_uid",
                "title",
                "type",
                "uid"
            ],
            "type": "object"
        },
        "Concept": {
            "additionalProperties": false,
            "properties": {
                "$schema": {
                    "description": "for json schema",
                    "type": "string"
                },
                "category": {
                    "description": "space region",
                    "pattern": "^[a-z0-9\\-]*$",
                    "type": "string"
                },
                "position": {
                    "description": "position in space",
                    "properties": {
                        "x": {
                            "type": "number"
                        },
                        "y": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "x",
                        "y"
                    ],
                    "type": "object"
                },
                "tags": {
                    "items": {
                        "enum": [
                            "ADVANCED_TOPIC",
                            "CONCERN"
                        ],
                        "type": "string"
                    },
                    "type": "array"
                },
                "title": {
                    "description": "displayed in viewport and popup",
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "concept"
                    ],
                    "type": "string"
                },
                "uid": {
                    "description": "Unique and short identifier used to reference this object.",
                    "pattern": "^[a-z0-9\\-]*$",
                    "type": "string"
                },
                "wiki": {
                    "description": "wikipedia page url",
                    "pattern": "^https://en\\\\.wikipedia\\\\.org/.*",
                    "type": "string"
                }
            },
            "required": [
                "category",
                "position",
                "title",
                "type",
                "uid"
            ],
            "type": "object"
        },
        "Product": {
            "additionalProperties": false,
            "properties": {
                "$schema": {
                    "description": "for json schema",
                    "type": "string"
                },
                "category": {
                    "description": "space region",
                    "pattern": "^[a-z0-9\\-]*$",
                    "type": "string"
                },
                "github": {
                    "description": "github repo url",
                    "pattern": "^https://github\\\\.com/.*",
                    "type": "string"
                },
                "position": {
                    "description": "position in space",
                    "properties": {
                        "x": {
                            "type": "number"
                        },
                        "y": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "x",
                        "y"
                    ],
                    "type": "object"
                },
                "stackoverflow_tag": {
                    "type": "string"
                },
                "tags": {
                    "items": {
                        "enum": [
                            "FREE",
                            "OPEN_SOURCE",
                            "POPULAR",
                            "TRENDING"
                        ],
                        "type": "string"
                    },
                    "type": "array"
                },
                "title": {
                    "description": "displayed in viewport and popup",
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "product"
                    ],
                    "type": "string"
                },
                "uid": {
                    "description": "Unique and short identifier used to reference this object.",
                    "pattern": "^[a-z0-9\\-]*$",
                    "type": "string"
                },
                "wiki": {
                    "description": "wikipedia page url",
                    "pattern": "^https://en\\\\.wikipedia\\\\.org/.*",
                    "type": "string"
                }
            },
            "required": [
                "category",
                "position",
                "title",
                "type",
                "uid"
            ],
            "type": "object"
        },
        "Related": {
            "properties": {
                "$schema": {
                    "description": "for json schema",
                    "type": "string"
                },
                "category": {
                    "description": "space region",
                    "pattern": "^[a-z0-9\\-]*$",
                    "type": "string"
                },
                "parent_uid": {
                    "description": "Unique and short identifier used to reference this object.",
                    "pattern": "^[a-z0-9\\-]*$",
                    "type": "string"
                },
                "title": {
                    "description": "displayed in viewport and popup",
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "related"
                    ],
                    "type": "string"
                },
                "uid": {
                    "description": "Unique and short identifier used to reference this object.",
                    "pattern": "^[a-z0-9\\-]*$",
                    "type": "string"
                },
                "wiki": {
                    "description": "wikipedia page url",
                    "pattern": "^https://en\\\\.wikipedia\\\\.org/.*",
                    "type": "string"
                }
            },
            "required": [
                "category",
                "parent_uid",
                "title",
                "type",
                "uid"
            ],
            "type": "object"
        },
        "SceneText": {
            "additionalProperties": false,
            "properties": {
                "$schema": {
                    "description": "for json schema",
                    "type": "string"
                },
                "arc": {
                    "description": "1 for max. curvature, 0 means text follow a straight line",
                    "maximum": 1,
                    "minimum": 0,
                    "type": "number"
                },
                "category": {
                    "description": "space region",
                    "pattern": "^[a-z0-9\\-]*$",
                    "type": "string"
                },
                "position": {
                    "description": "position in space",
                    "properties": {
                        "x": {
                            "type": "number"
                        },
                        "y": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "x",
                        "y"
                    ],
                    "type": "object"
                },
                "rotation": {
                    "description": "clockwise rotation in degrees (-180,180)",
                    "maximum": 180,
                    "minimum": -180,
                    "type": "number"
                },
                "size": {
                    "type": "number"
                },
                "title": {
                    "description": "displayed in viewport and popup",
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "scenetext"
                    ],
                    "type": "string"
                },
                "uid": {
                    "description": "Unique and short identifier used to reference this object.",
                    "pattern": "^[a-z0-9\\-]*$",
                    "type": "string"
                },
                "wiki": {
                    "description": "wikipedia page url",
                    "pattern": "^https://en\\\\.wikipedia\\\\.org/.*",
                    "type": "string"
                }
            },
            "required": [
                "arc",
                "category",
                "position",
                "rotation",
                "size",
                "title",
                "type",
                "uid"
            ],
            "type": "object"
        }
    }
}

